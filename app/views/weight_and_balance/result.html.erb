<div class="row">
  <div class="large-2">
    <%= label_tag(:max_takeoff, 'Maximum takeoff weight:') %>
    <%= @weight['max_takeoff'] %>
  </div>
  <table>
    <thead>
    <tr>
      <th></th>
      <th>Weight</th>
      <th>Arm</th>
      <th>Moment</th>
    </tr>
    </thead>
    <tr>
      <th>Empty weight</th>
      <% @data.each do |column| %>
        <td><%=column['empty']%></td>
      <% end %>
    </tr>
    <tr>
      <th>Front seats</th>
      <% @data.each do |column| %>
        <td><%=column['front']%></td>
      <% end %>
    </tr>
    <tr>
      <th>Rear seats</th>
      <% @data.each do |column| %>
        <td><%=column['rear']%></td>
      <% end %>
    </tr>
    <tr>
      <th>Baggage</th>
      <% @data.each do |column| %>
        <td><%=column['baggage']%></td>
      <% end %>
    </tr>
    <tr>
      <th>Fuel</th>
      <% @data.each do |column| %>
        <td><%=column['fuel']%></td>
      <% end %>
    </tr>
    <tr>
      <th>Fuel allowance</th>
      <% @data.each do |column| %>
        <td><%=column['fuel_allowance']%></td>
      <% end %>
    </tr>
    <tr>
      <th>Totals</th>
      <% @totals.each do |column| %>
        <td><%=column%></td>
      <% end %>
    </tr>
  </table>
  <div class="large-4">
    <% if @within_limits %>
      <p>Total weight is within the limit</p>
    <% else %>
      <p>Total weight is not within the limit</p>
    <% end %>

  </div>
</div>